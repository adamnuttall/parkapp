<Alloy>
  <View id="container" layout="vertical">
    <View id="topBarContainer" layout="horizontal" onClick="close">
        <View id="backButtonContainer">
          <ImageView id="backbutton" image="images/icon-menu.png" />
        </View>
        <View id="topBarContentContainer" layout="vertical">
          <Label id="topBarTitle">EVENTS</Label>
          <Label id="topBarParkTitle">WHAT'S GOING ON AT GRONDRE</Label>
        </View>
      </View>
    <ScrollView id="scrollContainer" showVerticalScrollIndicator="true" layout="vertical">
      <View class="eventListContainer" layout="vertical">
        <View id="frankiesFunhouseExpandedContainer" class="expandedContainer" layout="vertical">
          <View id="frankiesFunhouse" onClick="frankiesFunhouseClick" class="eventContainer" layout="horizontal">
            <View class="timeContainer">
              <ImageView class="timeImage" image="images/date-1.png" />
            </View>
            <View class="eventDetailsContainer" layout="vertical">
              <Label class="eventDetailsTitle">FRANKIE'S FUNHOUSE</Label>
              <View class="eventDetailsContentHolder" layout="horizontal">
                <ImageView class="eventIcon" image="images/icon-ents.png"/>
                <Label class="eventName">Sing-a-long funtime</Label>
              </View>
            </View>
            <View class="starContainer">
              <ImageView image="images/icon-fav_inactive.png"/>
            </View>
          </View>
          <View class="narrowDivider"></View>
          <View id="frankiesFunhouseExpanded" class="expandedInfo" onClick="frankiesFunhouseExpandedClick" layout="vertical">
            <View class="introText">
              <Label class="introTextLabel">Become a tiger or a panda or a spiderman or whatever you want at our face painting workshop. That means you too mum and dad!</Label>
            </View>
            <View class="narrowDivider"></View>
            <View class="extraInfo" layout="horizontal">
              <View class="mainColumn">
                <Label class="mainColumnLabel">ALL AGES ALLOWED</Label>
              </View>
              <View class="secondaryColumn">
                <Label class="secondaryColumnLabel">FREE EVENT, BUT DONATIONS WELCOME</Label>
              </View>
            </View>
          </View>
        </View>
        <View class="divider"/>
        <View class="eventContainer" layout="horizontal">
          <View class="timeContainer">
            <ImageView class="timeImage" image="images/date-2.png"/>
          </View>
          <View class="eventDetailsContainer" layout="vertical">
            <Label class="eventDetailsTitle">BOATING LAKE</Label>
            <View class="eventDetailsContentHolder" layout="horizontal">
              <ImageView class="eventIcon" image="images/icon-boat.png" />
              <Label class="eventName">Kayak Lessons</Label>
            </View>
          </View>
          <View class="starContainer">
            <ImageView image="images/icon-fav_active.png"/>
          </View>
        </View>
        <View class="divider"/>
        <View class="eventContainer" layout="horizontal">
          <View class="timeContainer">
            <ImageView class="timeImage" image="images/date-3.png"/>
          </View>
          <View class="eventDetailsContainer" layout="vertical">
            <Label class="eventDetailsTitle">PLAYHOUSE</Label>
            <View class="eventDetailsContentHolder" layout="horizontal">
              <ImageView class="eventIcon" image="images/icon-paint.png"/>
              <Label class="eventName">Face Painting</Label>
            </View>
          </View>
          <View class="starContainer">
            <ImageView image="images/icon-fav_active.png"/>
          </View>
        </View>
        <View class="divider"/>
        <View class="eventContainer" layout="horizontal">
          <View class="timeContainer">
            <ImageView class="timeImage" image="images/date-4.png"/>
          </View>
          <View class="eventDetailsContainer" layout="vertical">
            <Label class="eventDetailsTitle">PLAYING FIELDS</Label>
            <View class="eventDetailsContentHolder" layout="horizontal">
              <ImageView class="eventIcon" image="images/icon-football.png"/>
              <Label class="eventName">Five-a-side football</Label>
            </View>
          </View>
          <View class="starContainer">
            <ImageView image="images/icon-fav_inactive.png"/>
          </View>
        </View>
        <View class="divider"/>
        <View class="eventContainer" layout="horizontal">
          <View class="timeContainer">
            <ImageView class="timeImage" image="images/date-5.png"/>
          </View>
          <View class="eventDetailsContainer" layout="vertical">
            <Label class="eventDetailsTitle">PLAYHOUSE</Label>
            <View class="eventDetailsContentHolder" layout="horizontal">
              <ImageView class="eventIcon" image="images/icon-show.png"/>
              <Label class="eventName">Simon Says</Label>
            </View>
          </View>
          <View class="starContainer">
            <ImageView image="images/icon-fav_inactive.png"/>
          </View>
        </View>
        <View class="divider"/>
        <View class="eventContainer" layout="horizontal">
          <View class="timeContainer">
            <ImageView class="timeImage" image="images/date-6.png"/>
          </View>
          <View class="eventDetailsContainer" layout="vertical">
            <Label class="eventDetailsTitle">THE STABLE INN CLUB</Label>
            <View class="eventDetailsContentHolder" layout="horizontal">
              <ImageView class="eventIcon" image="images/icon-pizza.png"/>
              <Label class="eventName">Pizza Party!</Label>
            </View>
          </View>
          <View class="starContainer">
            <ImageView image="images/icon-fav_inactive.png"/>
          </View>
        </View>
      </View>
    </ScrollView>
  </View>
</Alloy>