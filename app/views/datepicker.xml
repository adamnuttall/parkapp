<Alloy>
  <View id="container" layout="vertical">
    <View id="settingsContainer">
      <ImageView id="settingsImage" image="images/icon-settings.png" />
    </View>
    <View id="introTextContainer">
      <Label id="introText">So we can serve you the appropriate content please tell us which park you're staying at and when you're staying with us.</Label>
    </View>
    <View id="calendarContainer" borderColor="blue" borderWidth="1">
      <View id="parkPickerContainer" borderColor="red" borderWidth="1">
      </View>
      <View id="datePickerContainer" layout="vertical" borderColor="black" borderWidth="1">
        <Picker id="arrivalPicker" class="picker" type="Ti.UI.PICKER_TYPE_DATE"></Picker>
        <Picker id="departurePicker" class="picker" type="Ti.UI.PICKER_TYPE_DATE"></Picker>
      </View>
    </View>
